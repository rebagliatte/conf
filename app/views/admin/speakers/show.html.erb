<header class="admin-header">
  <%= title @speaker.name %>

  <% if can? :manage, @conference_edition %>
    <%= link_to 'Edit', edit_admin_conference_edition_speaker_path(@conference_edition.id, @speaker), class: 'btn btn-primary main-cta' %>
  <% end %>
</header>

<%= render(partial: 'admin/shared/locale_tabs', locals: { translations: @speaker.translations, resource: @speaker }) %>

<table class="table">
  <tr>
    <th>ID</th>
    <td><%= @speaker.id %></td>
  </tr>
  <tr>
    <th>Name</th>
    <td><%= @speaker.name %></td>
  </tr>
  <tr>
    <th>Bio</th>
    <td><%= @speaker.bio %></td>
  </tr>
  <tr>
    <th>Company</th>
    <td><%= @speaker.company %></td>
  </tr>
  <tr>
    <th>Avatar</th>
    <td><%= avatar_for(@speaker, :avatar, :square_230_230) %></td>
  </tr>
  <tr>
    <th>City</th>
    <td><%= @speaker.city %></td>
  </tr>
  <tr>
    <th>Country</th>
    <td><%= @speaker.country %></td>
  </tr>
  <tr>
    <th>Twitter username</th>
    <td><%= @speaker.twitter_username %></td>
  </tr>
  <tr>
    <th>Github Username</th>
    <td><%= @speaker.github_username %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= @speaker.email %></td>
  </tr>
  <tr>
    <th>User</th>
    <td><%= @speaker.user_id %></td><%# TODO: link %>
  </tr>
  <tr>
    <th>Status</th>
    <td><%= @speaker.status %></td>
  </tr>
  <% if @speaker.is_travelling? %>
    <tr>
      <th>Arrival Date</th>
      <td><%= @speaker.arrival_date.to_s(:short) if @speaker.arrival_date %></td>
    </tr>
    <tr>
      <th>Accomodation Details</th>
      <td><%= @speaker.accomodation_details %></td>
    </tr>
  <% end %>
  <tr>
    <th>Created at</th>
    <td><%= @speaker.created_at.to_s(:short) %></td>
  </tr>
</table>
