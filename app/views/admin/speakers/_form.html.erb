<%# @param conference_edition [Models::ConferenceEdition] %>
<%# @param speaker [Models::Speaker] %>
<%# @param action [String] %>

<%= simple_form_for [:admin, conference_edition, speaker], html: { class: 'form-horizontal' } do |form| %>

  <%= error_messages_for(speaker) %>

  <%= form.hidden_field :conference_edition_id %>
  <%= form.input :name %>
  <%= form.input :bio %>
  <%= form.input :company %>
  <%= form.input :avatar %>
  <%= form.input :city %>
  <%= form.input :country %>
  <%= form.input :twitter_username %>
  <%= form.input :github_username %>
  <%= form.input :email %>
  <%= form.input :confirmation_status, as: :select, collection: Speaker::CONFIRMATION_STATUSES, include_blank: false %>

  <div class="form-actions">
    <%= form.submit "#{action.titleize} Speaker", class: 'btn btn-large btn-primary' %>
  </div>
<% end %>
