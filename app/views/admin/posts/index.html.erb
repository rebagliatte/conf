<header class="admin-header">
  <%= title 'Posts' %>

  <% if can? :manage, @conference_edition %>
    <%= link_to 'Create a new post', new_admin_conference_edition_post_path(@conference_edition.id), class: 'btn btn-default main-cta' %>
  <% end %>

</header>

<% if @posts.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.created_at.to_s(:short) %></td>
          <td class="actions">
            <%= link_to admin_conference_edition_post_path(@conference_edition.id, post), title: 'View' do %><i class="fa fa-eye-open"></i><% end %>

            <% if can? :manage, @conference_edition %>
              <%= link_to edit_admin_conference_edition_post_path(@conference_edition.id, post), title: 'Edit' do %><i class="fa fa-pencil"></i><% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="alert alert-info">
    It seems there are no posts for this conference edition.

    <% if can? :manage, @conference_edition %>
      Would you like to <%= link_to 'create one', new_admin_conference_edition_post_path(@conference_edition.id) %>?
    <% end %>
  </p>
<% end %>
