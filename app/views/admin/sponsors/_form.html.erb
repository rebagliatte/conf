<%# @param conference_edition [Models::ConferenceEdition] %>
<%# @param sponsor [Models::Sponsor] %>
<%# @param action [String] %>

<%= simple_form_for [:admin, conference_edition, sponsor], html: { class: 'form-horizontal' } do |form| %>

  <%= error_messages_for(sponsor) %>

  <%= form.hidden_field :conference_edition_id %>
  <%= form.input :name %>
  <%= form.input :kind, as: :select, collection: Sponsor::KINDS.keys, include_blank: false %>
  <%= form.input :logo %>
  <%= form.input :website_url %>
  <%= form.input :description %>

  <div class="form-actions">
    <%= form.submit "#{action.titleize} Sponsor", class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
