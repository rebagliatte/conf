<header class="admin-header">
  <%= title @code.code %>

  <% if can? :manage, @conference_edition %>
    <%= link_to 'Edit', edit_admin_conference_edition_code_path(@conference_edition.id, @code), class: 'btn btn-primary main-cta' %>
  <% end %>
</header>

<table class="table">
  <tr>
    <th>ID</th>
    <td><%= @code.id %></td>
  </tr>
  <tr>
    <th>Code</th>
    <td><%= @code.code %></td>
  </tr>
  <tr>
    <th>Discount</th>
    <td><%= @code.discount %>%</td>
  </tr>
  <tr>
    <th>Start Date</th>
    <td><%= @code.start_date ? @code.start_date.to_s(:short) : '' %></td>
  </tr>
  <tr>
    <th>End Date</th>
    <td><%= @code.end_date ? @code.end_date.to_s(:short) : '' %></td>
  </tr>
  <tr>
    <th>Quantity</th>
    <td><%= @code.quantity %>%</td>
  </tr>
</table>
