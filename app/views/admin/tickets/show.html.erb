<header class="admin-header">
  <%= title @ticket.name %>

  <% if can? :manage, @conference_edition %>
    <%= link_to 'Edit', edit_admin_conference_edition_ticket_path(@conference_edition.id, @ticket), class: 'btn btn-primary main-cta' %>
  <% end %>
</header>

<table class="table">
  <tr>
    <th>ID</th>
    <td><%= @ticket.id %></td>
  </tr>
  <tr>
    <th>Name</th>
    <td><%= @ticket.name %></td>
  </tr>
  <tr>
    <th>Price</th>
    <td>$<%= @ticket.price %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= @ticket.description %></td>
  </tr>
  <tr>
    <th>Start Date</th>
    <td><%= @ticket.start_date ? @ticket.start_date.to_s(:short) : '' %></td>
  </tr>
  <tr>
    <th>End Date</th>
    <td><%= @ticket.end_date ? @ticket.end_date.to_s(:short) : '' %></td>
  </tr>
</table>
