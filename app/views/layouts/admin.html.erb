<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title><%= yield(:title) %> - Confnu Admin </title>
  <meta name="description" content="Confnu Admin">
  <meta name="viewport" content="width=device-width">
  <meta charset="utf-8">
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <%= render partial: 'shared/analytics' %>
</head>

<body class="admin">
  <header class="main-header">
    <h1><%= link_to 'Confnu ADMIN', admin_conferences_path %></h1>
    <%= render partial: 'shared/authentication' %>
  </header>

  <nav class="admin-nav">
    <ul>
      <% conference_editions.each do |e| %>
        <li>
          <%= link_to_unless_current e.full_name, admin_conference_edition_path(e) %>
          <ul>
            <li><%= link_to_unless_current 'Talks', admin_conference_edition_talks_path(e) %></li>
            <li><%= link_to_unless_current 'Speakers', admin_conference_edition_speakers_path(e) %></li>
            <li><%= link_to_unless_current 'Sponsors', admin_conference_edition_sponsors_path(e) %></li>
            <li><%= link_to_unless_current 'Schedule', '#' %></li>
            <li><%= link_to_unless_current 'Posts', admin_conference_edition_posts_path(e) %></li>
            <li><%= link_to_unless_current 'Tickets', '#' %></li>
            <li><%= link_to_unless_current 'Settings', '#' %></li>
          </ul>
        </li>
      <% end %>
      <li><%= link_to_unless_current 'New', '#' %></li>
    </ul>
  </nav>

  <main class="admin-content">
    <% flash.each do |name, msg| %>
      <p class="alert alert-<%= name %>"><%= msg %></p>
    <% end %>

    <%= content_for?(:content) ? yield(:content) : yield %>
  </main>

  <footer class="admin-footer">
  </footer>

  <%= javascript_include_tag 'application' %>
</body>
</html>
