<h1>Speakers</h1>

<% @speakers.each do |speaker| %>
  <article>
    <h1><%= speaker.name %></h1>
    <p><%= speaker.description %></p>
    <ul>
      <li>Twitter: <%= link_to speaker.twitter_username, "http://twitter.com/#{speaker.twitter_username}", target: 'blank' %></li>
      <li>Github: <%= link_to speaker.github_username, "http://github.com/#{speaker.twitter_username}", target: 'blank' %></li>
    </ul>
    <%= image_tag "https://api.twitter.com/1/users/profile_image?screen_name=#{speaker.twitter_username}&size=bigger", alt: speaker.name %>
  </article>
<% end %>
